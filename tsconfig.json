{
    "extends": "@silverhand/ts-config/tsconfig.base",
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",
        "declarationDir": "./dist/types",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "noImplicitThis": false,
        "types": ["node", "jest"]
    },
    "include": ["src", "jest.config.ts", "rollup.config.ts"],
    "exclude": ["src/**/*.test.ts"]
}
